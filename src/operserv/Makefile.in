#

CC=@CC@
INCLUDE=-I../../include
CFLAGS=@DEBUG@ -pipe -Wall ${INCLUDE} @CFLAGS@
EXEEXT=@EXEEXT@
OBJEXT=@OBJEXT@

SRC = \
        access.c \
        broadcast.c \
        die.c \
        gline.c \
        help.c \
        ignores.c \
        killchan.c \
        mode.c \
        op.c \
        operlist.c \
        remoper.c \
        netinfo.c \
        ignores.c \
        trace.c \
        sql.c \
        ungline.c

OBJS = ${SRC:%.c=%.@OBJEXT@}

all: info comp

build: info comp  
        
info:
	@echo ""   
	@echo "*                   Building OperServ commands                       *"
	@echo " \`------------------------------------------------------------------´"
        
comp: ${OBJS}


.SUFFIXES: .c .@OBJEXT@

.c.@OBJEXT@:
	${CC} ${CFLAGS} -c $< -o $@

clean:
	rm -f *.@OBJEXT@

distclean:
	@rm -f Makefile
