# Makefile
# $Id: Makefile.in,v 1.6 2004/08/05 00:03:27 mr Exp $
#

CC=@CC@
INCLUDE=-I../../include
CFLAGS=@DEBUG@ -pipe -Wall ${INCLUDE} @CFLAGS@
EXEEXT=@EXEEXT@
OBJEXT=@OBJEXT@

SRC = \
        auth.c \
        chnick.c \
        chpass.c \
        comment.c \
        grep.c \
        drop.c \
        forbid.c \
        ghost.c \
        help.c \
        info.c \
        noexpire.c \
        pass.c \
        register.c \
        set.c \
        unreg.c \
        whois.c

OBJS = ${SRC:%.c=%.@OBJEXT@}

all: info comp

build: info comp  
        
info:
	@echo ""   
	@echo "*                   Building NickServ commands                       *"
	@echo " \`------------------------------------------------------------------´"
        
comp: ${OBJS}


.SUFFIXES: .c .@OBJEXT@

.c.@OBJEXT@:
	${CC} ${CFLAGS} -c $< -o $@

clean:
	rm -f *.@OBJEXT@

distclean:
	@rm -f Makefile
