CC=@CC@
INCLUDE=-I../../include
CFLAGS=@DEBUG@ -pipe -Wall ${INCLUDE} @CFLAGS@
EXEEXT=@EXEEXT@
OBJEXT=@OBJEXT@

SRC = \
        access.c \
        autoop.c \
        ban.c \
        banlist.c \
        chowner.c \
        clearmodes.c \
        comment.c \
        cycle.c \
        deop.c \
        deopme.c \
        devoice.c \
        disable.c \
        drop.c \
        enable.c \
        grep.c \
        help.c \
        info.c \
        invite.c \
        kick.c \
        kickban.c \
        list.c \
        noexpire.c \
        op.c \
        opme.c \
        register.c \
        removeme.c \
        showcommands.c \
        topic.c \
        unban.c \
        unreg.c \
        set.c \
        voice.c


OBJS = ${SRC:%.c=%.@OBJEXT@}

all: info comp

build: info comp

info:
	@echo ""
	@echo "*                   Building ChanServ commands                       *"
	@echo " \`------------------------------------------------------------------´"

comp: ${OBJS}

.SUFFIXES: .c .@OBJEXT@

.c.@OBJEXT@:
	${CC} ${CFLAGS} -c $< -o $@

clean:
	rm -f *.@OBJEXT@
  
distclean:
	@rm -f Makefile
